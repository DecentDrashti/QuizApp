@model UserModel
<main id="main" class="main">
    <section class="section">
        @* <div class="row"> *@
        @*   <div class="col-lg-6"> *@

        <div class="card">
            <div class="card-body">
                <h5 class="card-title">User Form</h5>

                <!-- Vertical Form -->
                <form class="row " asp-controller="User" asp-action="UserAddEdit" method="post">
                   
                    @* Hidden CountryID field *@
                    @* ADD THIS! *@
                    <input type="hidden" asp-for="UserID" />

                    <div class="col-12">
                        <label for="inputName4" class="form-label">UserName</label>
                        <input type="text" class="form-control" id="inputName4" asp-for="UserName">
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>

                    <div class="col-12">
                        <label for="inputPassword3" class="col-sm-2 col-form-label">Password</label>
                            <input type="password" class="form-control" id="inputPassword" asp-for="Password">
                        <span asp-validation-for="Password" class="text-danger"></span>
                        <small class="form-text text-muted">if you are editing Leave blank to keep the current password.</small>
                    </div>

                    <div class="col-12">
                        <label for="inputEmail3" class="col-sm-2 col-form-label">Email</label>
                            <input type="email" class="form-control" id="inputEmail" asp-for="Email">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="col-12">
                        <label for="number" class="form-label">Mobile</label>
                        <input type="text" class="form-control" id="inputName4" asp-for="Mobile">
                        <span asp-validation-for="Mobile" class="text-danger"></span>
                    </div>

                    <div class="col-12">
                        <label for="inputNumber" class="form-label">IsActive</label>
                        <input type="number" class="form-control" id="inputText" value="1">
                    </div>

                    <div class="text-center">
                        <button type="submit" class="btn btn-primary" onclick="showSuccessAndSubmit()">Save</button>
                        <button type="reset" class="btn btn-secondary">Cancel</button>
                    </div>
                </form><!-- Vertical Form -->

            </div>
        </div>

    </section>
    <script>
        //add..
                function showSuccessAndSubmit() {
            Swal.fire({
                position: 'top-end',
                icon: 'success',
                title: 'Your work has been saved',
                showConfirmButton: false,
                timer: 3000
            });

            // Delay form submission until after the toast (optional)
            setTimeout(() => {
                document.getElementById('addForm').submit();
            }, 3000); // Matches the timer duration
        }
    </script>
</main>

