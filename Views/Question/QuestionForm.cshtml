@model QuestionModel
<main id="main" class="main">
    <section class="section">
        @* <div class="row"> *@
        @*   <div class="col-lg-6"> *@

        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Question Form</h5>

                <!-- Vertical Form -->
                <form class="row " asp-controller="Question" asp-action="QuestionAddEdit" method="post">
                    
                    @* Hidden CountryID field *@
                    @* ADD THIS! *@
                    <input type="hidden" asp-for="QuestionID" />

                    <div class="col-12">
                        <label for="inputName4" class="form-label">QuestionText</label>
                        <input type="text" class="form-control" id="inputName4"asp-for="QuestionText">
                        <span asp-validation-for="QuestionText" class="text-danger"></span>
                    </div>

                    <div class="col-12">
                        <label for="inputID" class="form-label">QuestionLevelID</label>
                        <select class="form-control" asp-for="QuestionLevelID">
                            <option value="">Select QuestionLevel</option>
                            @foreach (var ql in ViewBag.QuestionLevelList)
                            {
                                <option value="@ql.QuestionLevelID">@ql.QuestionLevel</option>
                            }
                        </select>
                        <span asp-validation-for="QuestionLevelID" class="text-danger"></span>
                    </div>

                    <div class="col-12">
                        <label for="inputName4" class="form-label">OptionA</label>
                        <input type="text" class="form-control" id="inputName4" asp-for="OptionA">
                        <span asp-validation-for="OptionA" class="text-danger"></span>
                    </div>

                    <div class="col-12">
                        <label for="inputName4" class="form-label">OptionB</label>
                        <input type="text" class="form-control" id="inputName4"asp-for="OptionB">
                        <span asp-validation-for="OptionB" class="text-danger"></span>
                    </div>

                    <div class="col-12">
                        <label for="inputName4" class="form-label">OptionC</label>
                        <input type="text" class="form-control" id="inputName4" asp-for="OptionC">
                        <span asp-validation-for="OptionC" class="text-danger"></span>
                    </div>

                    <div class="col-12">
                        <label for="inputName4" class="form-label">OptionD</label>
                        <input type="text" class="form-control" id="inputName4"asp-for="OptionD">
                        <span asp-validation-for="OptionD" class="text-danger"></span>
                    </div>

                    <div class="col-12">
                        <label for="inputName4" class="form-label">CorrectOption</label>
                        <input type="text" class="form-control" id="inputName4"asp-for="CorrectOption">
                        <span asp-validation-for="CorrectOption" class="text-danger"></span>
                    </div>

                    <div class="col-12">
                        <label for="inputNumber" class="form-label">QuestionMarks</label>
                        <input type="number" class="form-control" id="inputNumber"asp-for="QuestionMarks">
                        <span asp-validation-for="QuestionMarks" class="text-danger"></span>
                    </div>

                    <div class="col-12">
                        <label for="inputText" class="form-label">IsActive</label>
                        <input type="text" class="form-control" id="inputText">
                        <span asp-validation-for="IsActive" class="text-danger"></span>
                    </div>

                    <div class="col-12">
                        <label for="inputID" class="form-label">UserID</label>
                        <select class="form-control" asp-for="UserID">
                            <option value="">Select User</option>
                            @foreach (var user in ViewBag.UserList)
                            {
                                <option value="@user.UserID">@user.UserName</option>
                            }
                        </select>
                        <span asp-validation-for="UserID" class="text-danger"></span>
                    </div>

                    <div class="text-center">
                        <button type="submit" class="btn btn-primary" onclick="showSuccessAndSubmit()">Save</button>
                        <button type="reset" class="btn btn-secondary">Cancel</button>
                    </div>
                </form><!-- Vertical Form -->

            </div>
        </div>

    </section>
    <script>
        //add..
                function showSuccessAndSubmit() {
            Swal.fire({
                position: 'top-end',
                icon: 'success',
                title: 'Your work has been saved',
                showConfirmButton: false,
                timer: 3000
            });

            // Delay form submission until after the toast (optional)
            setTimeout(() => {
                document.getElementById('addForm').submit();
            }, 3000); // Matches the timer duration
        }
    </script>
</main>